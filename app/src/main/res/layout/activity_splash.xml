<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="andres.dev.com.menurestaurant.UI.SplashActivity"
    android:background="@drawable/bg_splash">

    <TextView
        android:id="@+id/splash_text"
        android:text="@string/action_askupdate"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_load"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <com.romainpiel.shimmer.ShimmerTextView
        android:id="@+id/splash_load"
        android:text="Menu Restaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textColor="#C07B80"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="71dp" />

</RelativeLayout>
